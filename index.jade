doctype html
html(lang='en')
   head
      meta(charset='utf-8')
      meta(htp-equiv='X-UA-Compatible', content='IE-edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title P_Rex WikiSearch
      link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet', type='text/css')
      link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', rel='stylesheet', type='text/css')
      link(href='https://fonts.googleapis.com/css?family=Merriweather', rel='stylesheet', type='text/css')
      link(href='https://fonts.googleapis.com/css?family=Playfair+Display', rel='stylesheet', type='text/css')
      link(href='https://fonts.googleapis.com/css?family=Londrina+Solid', rel='stylesheet', type='text/css')
      link(href='css/style.css', rel='stylesheet', type='text/css')
   body(ng-app='WikiSearchApp')
      div.title-container.text-center
         div.container.icons
            div.wrap
               i.fa.fa-wikipedia-w
               i.fa.fa-search
            h1 P_Rex WikiSearch
            div.wrap
               i.fa.fa-wikipedia-w
               i.fa.fa-search
            p.lead What are we looking for?
      div.search-container(ng-controller='mainController')
         form.form-group(role='form', ng-submit='getWikiResults(searchVal)')
            input.form-control.circle(type='search', ng-model='searchVal')
            span.form-group-btn
               button.btn.btn-sm.dropdown-toggle(type='button')
                  span.icon-bars-button
                     span.icon-bar
                     span.icon-bar
            div.line
         div.list-group(ng-hide='!wikiPages')
            div.row
               div.col-md-8.col-md-offset-2.col-xs-10.col-xs-offset-1
                  a.list-group-item(ng-repeat='page in wikiPages', ng-href='{{page.link}}', target='_blank')
                     h2 {{page.title}}
                     p.lead(ng-bind-html='page.snippet')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js', type='text/javascript')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular-sanitize.min.js', type='text/javascript')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular-animate.min.js', type='text/javascript')




